block content
    .main
        include Tamplate/menu
        .head
            div.monitor#slider
                ul
                    li(type="none")
                        img(src="pic/fon_monitor.png")
                    li(type="none")
                        img(src="pic/fon_monitor1.png")
                    li(type="none")
                        img(src="pic/fon_monitor2.png")
                    li(type="none")
